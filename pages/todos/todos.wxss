.back_container {
  height: 100%;
  background-color: #ededed;
}

.todo_container {
  height: 80%;
  background-color: #ededed;
}

/* ================== 搜索框 ================== */
.search-box {
  width: 94%;
  margin-left: 3%;
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 0 10rpx #dcdcdc;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.search-icon {
  margin-left: 15rpx;
}


/* ================== 输入区 ================== */
.header {
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 5px 5px 5px #e0e0e0;
  margin-bottom: 30rpx;
  padding: 20rpx;
  width: 94%;
  height: 90rpx;
  background-color: #ffffff;
  margin-left: 3%;
}

.category-picker {
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  color: #333;
  margin-right: 20rpx;
  font-size: 26rpx;
}

.header .new-todo {
  flex: 1;
  font-size: 28rpx;
}

.plus {
  width: 50rpx;
  height: 50rpx;
}


/* ================== 列表 ================== */
.todos {
  width: 94%;
  margin-left: 3%;
}

.item {
  display: flex;
  height: 130rpx;
  align-items: center;
  padding: 25rpx;
  border-bottom: 1rpx solid #e0e0e0;
  background-color: #6f879f;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  background-image: url("https://s3.ax1x.com/2021/03/17/6cxSER.jpg");
  background-size: 110%;
  background-repeat: no-repeat;
}

.item-body {
  flex: 1;
}

.name {
  font-size: 30rpx;
  color: #fff;
  margin: 10px;
}

.tag {
  display: inline-block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ffe7b8;
}

.item.completed {
  background-color: #d5d5d5;
  background-image: none;
}

.item.completed .name {
  text-decoration: line-through;
  color: #888;
}


/* ================== 底部 ================== */
.footer {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0 30rpx 0;
  padding: 0 5rpx;
  font-size: 30rpx;
  color: #576b95;
}

.btn {
  width: 54rpx;
  height: 43rpx;
  margin: 0 3%;
}

.foottext {
  margin: 0 3%;
}


/* ================== 空状态 ================== */
.nodata {
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.nodata_img {
  width: 50px;
  height: 50px;
}

.nodata_text {
  color: #c4c4c4;
}
